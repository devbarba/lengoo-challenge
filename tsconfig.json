{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "resolveJsonModule": true,
      "declaration": false,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "typeRoots": [
        "src/@types",
        "node_modules/@types",
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src",
      "paths": {
          "@config/*": ["config/*"],
          "@controllers/*": ["controllers/*"],
          "@database/*": ["database/*"],
          "@errors/*": ["errors/*"],
          "@interfaces/*": ["interfaces/*"],
          "@middlewares/*": ["middlewares/*"],
          "@models/*": ["models/*"],
          "@routes/*": ["routes/*"],
          "@services/*": ["services/*"],
          "@utils/*": ["utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": [
      "./jest.config.ts"
    ]
}
